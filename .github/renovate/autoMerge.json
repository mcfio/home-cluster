{
  "packageRules": [
    {
      "description": "Auto-merge specific GitHub Action releases",
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "renovatebot/github-action"
      ]
    },
    {
      "description": "Auto-merge minor and patch specific container images",
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackagePattern": [
        "ghcr.io/k8s-at-home",
        "ghcr.io/onedr0p"
      ]
    },
    {
      "description": "Auto-merge minor helm releases",
      "matchDatasources": ["helm"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null,
      "matchUpdateTypes": ["patch"]
    },
    {
      "description": "Auto-merge problematic and frequent helm releases",
      "matchDatasources": ["helm"],
      "automerge": true,
      "automergeType": "pr",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "kube-prometheus-stack"
      ]
    }
  ]
}
