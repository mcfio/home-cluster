{
  "extends": [
    ":enableRenovate",
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enablePreCommit",
    ":automergeDigest",
    ":automergeBranch",
    "github>mcfio/home-cluster//.github/renovate/autoMerge",
    "github>mcfio/home-cluster//.github/renovate/commitMessage",
    "github>mcfio/home-cluster//.github/renovate/disabledDatasources",
    "github>mcfio/home-cluster//.github/renovate/groups",
    "github>mcfio/home-cluster//.github/renovate/labels",
    "github>mcfio/home-cluster//.github/renovate/semanticCommits"
  ],
  "platform": "github",
  "timezone": "America/Toronto",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "commitBodyTable": true,
  "ignorePaths": [
    "**/archived/**"
  ],
  "flux": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "regexManagers": [
    {
      "description": "Process custom dependencies",
      "fileMatch": [
        "cluster/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\n.*?\"(?<currentValue>.*)\"\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "description": "Use loose versioning for specific dependencies",
      "matchDatasources": ["docker", "github-releases"],
      "versioning": "loose",
      "matchPackageNames": [
        "ghcr.io/onedr0p/plex"
      ]
    }
  ]
}
