{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate",
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enablePreCommit",
    ":automergeDigest",
    ":automergeBranch",
    "github>mcfio/home-cluster//.github/renovate/autoMerge",
    "github>mcfio/home-cluster//.github/renovate/commitMessage",
    "github>mcfio/home-cluster//.github/renovate/groups",
    "github>mcfio/home-cluster//.github/renovate/labels",
    "github>mcfio/home-cluster//.github/renovate/semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "platform": "github",
  "timezone": "America/Toronto",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "commitBodyTable": true,
  "flux": {
    "fileMatch": [
      "cluster/.+\\.ya?ml$"
    ]
  }
}
