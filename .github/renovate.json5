{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>mcfio/renovate-config",
    "github>mcfio/renovate-config:automerge-github-actions",
    "github>mcfio/home-cluster//.github/renovate/autoMerge.json5",
    "github>mcfio/home-cluster//.github/renovate/groups.json5",
    ":automergeBranch",
    "helpers:pinGitHubActionDigests"
  ],
  platform: "github",
  username: "purpose-robot[bot]",
  gitAuthor: "purpose-robot <122760773+purpose-robot[bot]@users.noreply.github.com>",
  repositories: ["mcfio/home-cluster"],
  ignorePaths: ["**/.archive/**"],
  flux: {
    fileMatch: ["kubernetes/.+\\.ya?ml$"]
  },
  "helm-values": {
    fileMatch: ["kubernetes/.+\\.ya?ml$"]
  },
  kubernetes: {
    fileMatch: ["kubernetes/.+\\.ya?ml$"]
  },
  packageRules: [
    {
      description: "Use loose versioning for specific dependencies",
      matchDatasources: ["docker"],
      versioning: "loose",
      matchPackagePatterns: [
        "plex"
      ]
    },
    {
      description: "disable package pinning for cluster manifests",
      pinDigests: false,
      matchPackagePatterns: ["ghcr.io/mcfio/kubernetes-manifests/home-cluster"]
    }
  ]
}
